{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "declaration": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": ".",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "test/*"
  ]
}
