{
  "compilerOptions": {
    "lib": ["es7", "ES2017"],
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "declaration": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "test/*"
  ]
}
